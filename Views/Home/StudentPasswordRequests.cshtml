@model IEnumerable<StudentPasswordRequest>
@{
    ViewData["Title"] = "Student Password Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="pt-6 bg-light">
    <div class="container">
        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-primary">Student Password Requests</h2>
            <small class="text-muted">Manage student requests efficiently and securely</small>
        </div>

        <!-- Card Wrapper -->
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Requests List</h5>
                <span class="text-white-50 small">@DateTime.Now.ToString("dd MMM yyyy")</span>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Username</th>
                                <th scope="col">Request Type</th>
                                <th scope="col">Status</th>
                                <th scope="col">Request Date</th>
                                <th scope="col" class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model)
                            {
                                <tr>
                                    <td class="fw-medium">@request.Username</td>
                                    <td>@request.RequestType</td>
                                    <td>
                                        @if (request.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Completed</span>
                                        }
                                    </td>
                                    <td>@request.RequestDate.ToString("dd MMM yyyy HH:mm")</td>
                                    <td>
                                        @if (request.Status == "Pending")
                                        {
                                            <form asp-action="HandlePasswordRequest" method="post" class="d-flex gap-2 justify-content-center">
                                                <input type="hidden" name="id" value="@request.Id" />
                                                <select name="actionType" class="form-select form-select-sm" required>
                                                    <option value="ResetPassword">Reset Password</option>
                                                    <option value="KnowOldPassword">Know Old Password</option>
                                                </select>
                                                <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-success">Completed</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="card-footer bg-light text-end">
                <small class="text-muted">© @DateTime.Now.Year Hello World IT Limited - All rights reserved</small>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/2.4.2/jquery.signalR.min.js"></script>

    <script type="text/javascript">
        $(function () {
            // Reference the auto-generated hub
            var hub = $.connection.studentRequestHub;

            // Function to receive messages from server
            hub.client.receiveRequestUpdate = function (message) {
                // Optional: show a toast or alert
                alert(message);

                // Reload the page or update table dynamically
                location.reload();
            };

            // Start the connection
            $.connection.hub.start().done(function () {
                console.log("Connected to SignalR hub!");
            }).fail(function (err) {
                console.error("SignalR connection error: ", err);
            });
        });
    </script>
}