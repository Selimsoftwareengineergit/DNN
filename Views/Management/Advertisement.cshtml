@model IEnumerable<DNN.Models.Banner>

@{
    ViewData["Title"] = "Advertisement Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- 🔹 Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">
            <i class="fa-solid fa-bullhorn me-2"></i>@ViewData["Title"]
        </h1>
        <a asp-controller="Management" asp-action="CreateAdvertisement"
           class="btn btn-primary rounded-pill px-4 py-2 shadow-sm">
            <i class="fa-solid fa-plus-circle me-2"></i>Create New Advertisement
        </a>
    </div>

    <!-- 🔹 Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-circle-check me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-triangle-exclamation me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- 🔹 Table -->
    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-header bg-primary text-white fw-semibold fs-5">
            <i class="fa-solid fa-table me-2"></i>All Advertisements
        </div>
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light text-center">
                    <tr>
                        <th>#</th>
                        <th>Company</th>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Preview</th>
                        <th>Start</th>
                        <th>End</th>
                        <th>Status</th>
                        <th>Clicks</th>
                        <th>Impressions</th>
                        <th>Priority</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @if (Model != null && Model.Any())
                    {
                        var count = 1;
                        foreach (var ad in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td class="fw-semibold">@ad.CompanyName</td>
                                <td>@ad.Title</td>
                                <td>
                                    <span class="badge bg-info text-dark">
                                        @ad.BannerType.ToString()
                                    </span>
                                </td>
                                <td>
                                    <img src="@Url.Content(ad.ImagePath)" alt="Ad Preview" class="rounded shadow-sm" style="width: 80px; height: 50px; object-fit: cover;" />
                                </td>
                                <td>@ad.StartDate.ToString("dd MMM yyyy")</td>
                                <td>@ad.EndDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    @if (ad.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>@ad.Clicks</td>
                                <td>@ad.Impressions</td>
                                <td>@ad.Priority</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Management" asp-action="EditAdvertisement" asp-route-id="@ad.Id"
                                           class="btn btn-sm btn-outline-primary rounded-pill px-3 me-1">
                                            <i class="fa-solid fa-pen-to-square me-1"></i>Edit
                                        </a>
                                        <a asp-controller="Management" asp-action="DeactivateAdvertisement" asp-route-id="@ad.Id"
                                           class="btn btn-sm btn-outline-danger rounded-pill px-3"
                                           onclick="return confirm('Are you sure you want to deactivate this advertisement?');">
                                            <i class="fa-solid fa-ban me-1"></i>Deactivate
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            count++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="12" class="py-4 text-muted fw-semibold">
                                <i class="fa-solid fa-circle-info me-2"></i>No advertisements available.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    table th {
        white-space: nowrap;
    }

    .table img {
        transition: transform 0.2s ease;
    }

        .table img:hover {
            transform: scale(1.15);
        }
</style>
