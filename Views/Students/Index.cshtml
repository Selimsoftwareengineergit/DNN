@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@inject Microsoft.AspNetCore.Mvc.IUrlHelper Url

@{
    Layout = null;
    ViewData["Title"] = "Student Dashboard";

    // --- Retrieve User Details from Session ---
    var userRole = HttpContextAccessor.HttpContext?.Session.GetString("UserRole") ?? "Student";
    var userFullName = HttpContextAccessor.HttpContext?.Session.GetString("UserFullName") ?? "Authenticated User";
    var profileImagePath = HttpContextAccessor.HttpContext?.Session.GetString("ProfileImagePath");
    var userId = HttpContextAccessor.HttpContext?.Session.GetString("UserId");

    var defaultImagePath = "~/assets/img/profiles/default-avatar.jpg";
    var displayImagePath = string.IsNullOrEmpty(profileImagePath) ? defaultImagePath : profileImagePath;

    var notices = ViewBag.ActiveNotices as List<DNN.Models.Notice>;
    var banners = ViewBag.ActiveBanners as List<DNN.Models.Banner>;
}

<!DOCTYPE html>
<html lang="en-US" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Hello World IT</title>

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/assets/img/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/assets/img/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/img/favicons/favicon-16x16.png">
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico">
    <link rel="manifest" href="~/assets/img/favicons/manifest.json">
    <meta name="msapplication-TileImage" content="~/assets/img/favicons/mstile-150x150.png">
    <meta name="theme-color" content="#ffffff">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Custom CSS -->
    <link href="~/assets/css/theme.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Rubik:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        /* Profile & Header */
        .profile-avatar {
            object-fit: cover;
            aspect-ratio: 1/1;
        }

        .dashboard-tile {
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
        }

            .dashboard-tile:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 15px rgba(0,0,0,0.1);
            }

        @@keyframes ticker-scroll {
            0% {
                transform: translateX(0);
            }

            100% {
                transform: translateX(-100%);
            }
        }

        .ticker-wrapper {
            overflow: hidden;
            white-space: nowrap;
            position: relative;
            background: #f8f9fa;
            border-radius: 5px;
        }

        .ticker-content span {
            display: inline-block;
            padding-left: 100%;
            animation: ticker-scroll 25s linear infinite;
            color: #333;
            font-weight: 500;
        }

        /* Carousel Banner */
        .carousel-item img {
            transition: transform 0.5s ease-in-out;
            object-fit: contain; /* show full image without cropping */
            width: 100%; /* fit carousel width */
            height: 700px; /* double height */
            background-color: #f8f9fa; /* optional: background if image doesn't fill */
        }

            .carousel-item img:hover {
                transform: scale(1.03);
            }

        /* Fixed Media Query */
        @@media (max-width: 768px) {
            .carousel-item img {
                height: 150px;
            }
        }

        /* Main content spacing */
        .page-content-wrapper {
            padding-top: 2rem;
            padding-bottom: 2rem;
        }
    </style>
</head>
<body>
    <main class="main" id="top">

        <!-- =================== HEADER / NAVBAR =================== -->
        <section class="bg-primary py-2 d-none d-sm-block">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-auto d-none d-lg-block">
                        <p class="my-2 fs--1"><i class="fas fa-map-marker-alt me-3"></i>35/3 Shahajalal Housing, Mohammadpur, Dhaka-1207</p>
                    </div>
                    <div class="col-auto ms-md-auto order-md-2 d-none d-sm-block">
                        <ul class="list-unstyled list-inline my-2">
                            <li class="list-inline-item"><a class="text-decoration-none" href="#"><i class="fab fa-facebook-f text-900"></i></a></li>
                            <li class="list-inline-item"><a class="text-decoration-none" href="#"><i class="fab fa-pinterest text-900"></i></a></li>
                            <li class="list-inline-item"><a class="text-decoration-none" href="#"><i class="fab fa-twitter text-900"></i></a></li>
                            <li class="list-inline-item"><a class="text-decoration-none" href="#"><i class="fab fa-instagram text-900"></i></a></li>
                        </ul>
                    </div>
                    <div class="col-auto">
                        <p class="my-2 fs--1"><i class="fas fa-envelope me-3"></i><a class="text-900" href="mailto:helloworlditacademy@gmail.com">helloworlditacademy@gmail.com</a></p>
                    </div>
                </div>
            </div>
        </section>

        <nav class="navbar navbar-expand-lg navbar-light sticky-top py-3" data-navbar-on-scroll="data-navbar-on-scroll">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/assets/img/gallery/HelloWorld.png" alt="Hello World" style="width:50px; height:auto;">
                    <span class="ms-2 fw-semibold text-dark fs-5">Hello World IT Limited</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto pt-2 pt-lg-0 font-base align-items-center">
                        <li class="nav-item d-flex align-items-center me-3">
                            <img src="@Url.Content(displayImagePath)" alt="@userFullName Profile"
                                 class="rounded-circle me-2 profile-avatar border border-primary"
                                 style="width: 75px; height: 75px;"
                                 onerror="this.onerror=null; this.src='@Url.Content(defaultImagePath)';" />
                            <div>
                                <span class="d-block fw-bold text-primary" style="font-size: 1.2rem;">@userFullName</span>
                                <small class="d-block fw-semibold" style="font-size: 1rem; color: #6c63ff;">@userRole</small>
                            </div>
                        </li>
                        <li class="nav-item px-2">
                            <a class="btn btn-outline-secondary btn-sm rounded-pill px-3 py-1" asp-controller="Students" asp-action="ViewProfile" asp-route-id="@userId">
                                <i class="fas fa-user-circle me-1"></i> Profile
                            </a>
                        </li>
                        <li class="nav-item px-2">
                            <a class="btn btn-outline-info btn-sm rounded-pill px-3 py-1" asp-controller="Home" asp-action="Notice">
                                <i class="fas fa-bullhorn me-1"></i> Notice
                            </a>
                        </li>
                        <li class="nav-item px-2">
                            <a class="btn btn-outline-danger btn-sm rounded-pill px-3 py-1" asp-controller="Home" asp-action="Logout">
                                <i class="fas fa-sign-out-alt me-1"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- =================== HEADER END =================== -->
        <!-- =================== PAGE CONTENT =================== -->
        <section class="page-content-wrapper bg-light-subtle">
            <div class="container">

                <!-- Notice Ticker -->
                <div class="mb-4">
                    <div class="ticker-wrapper">
                        <div class="ticker-content">
                            <span>
                                @if (notices != null && notices.Any())
                                {
                                    foreach (var notice in notices)
                                    {
                                        @($"📢 {notice.Subject} ★★★ ")
                                    }
                                }
                                else
                                {
                                    @("No active notices at the moment.")
                                }
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Main Dashboard + Banner -->
                <div class="row g-4">
                    <!-- Dashboard Tiles -->
                    <div class="col-md-8 row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-2 g-4">
                        <div class="col">
                            <a asp-controller="Students" asp-action="ViewProfile" asp-route-id="@userId" class="card h-100 dashboard-tile text-decoration-none">
                                <div class="card-body text-center p-4">
                                    <i class="fas fa-id-card-alt fa-3x text-info mb-3"></i>
                                    <h5 class="card-title fw-semibold">View Profile</h5>
                                    <p class="card-text text-muted small">Access and update your details.</p>
                                </div>
                            </a>
                        </div>
                        <div class="col">
                            <a asp-controller="Students" asp-action="AttendanceHistory" class="card h-100 dashboard-tile text-decoration-none">
                                <div class="card-body text-center p-4">
                                    <i class="fas fa-calendar-check fa-3x text-success mb-3"></i>
                                    <h5 class="card-title fw-semibold">Attendance History</h5>
                                    <p class="card-text text-muted small">Check daily and cumulative records.</p>
                                </div>
                            </a>
                        </div>
                        <div class="col">
                            <a asp-controller="Students" asp-action="PaymentHistory" class="card h-100 dashboard-tile text-decoration-none">
                                <div class="card-body text-center p-4">
                                    <i class="fas fa-money-check-alt fa-3x text-warning mb-3"></i>
                                    <h5 class="card-title fw-semibold">Payment History</h5>
                                    <p class="card-text text-muted small">Review payments and fee status.</p>
                                </div>
                            </a>
                        </div>
                        <div class="col">
                            <a asp-controller="Students" asp-action="Result" class="card h-100 dashboard-tile text-decoration-none">
                                <div class="card-body text-center p-4">
                                    <i class="fas fa-trophy fa-3x text-danger mb-3"></i>
                                    <h5 class="card-title fw-semibold">Results</h5>
                                    <p class="card-text text-muted small">View your final grades and reports.</p>
                                </div>
                            </a>
                        </div>
                    </div>

                    <!-- Banner Carousel Right Side -->
                    <div class="col-md-4">
                        @if (banners != null && banners.Any())
                        {
                            <div id="bannerCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000">
                                <div class="carousel-inner rounded-3 shadow-sm">
                                    @for (int i = 0; i < banners.Count; i++)
                                    {
                                        var banner = banners[i];
                                        <div class="carousel-item @(i == 0 ? "active" : "") text-center">
                                            <a href="@banner.ClickUrl" target="@banner.Target">
                                                <img src="@banner.ImagePath" class="d-block w-100 object-fit-cover" style="height: 700px;" alt="@banner.Title">

                                            </a>
                                            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-1">
                                                <h6 class="text-white fw-bold mb-0">@banner.CompanyName</h6>
                                            </div>
                                        </div>
                                    }
                                </div>

                                <!-- Carousel Controls -->
                                <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info text-center mb-0">
                                No active advertisements found.
                            </div>
                        }
                    </div>
                </div>

            </div>
        </section>
        <!-- =================== PAGE CONTENT END =================== -->
        <!-- =================== FOOTER =================== -->
        <footer class="mt-5">
            <section class="bg-secondary py-4">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 mb-4">
                            <a class="navbar-brand d-flex align-items-center" href="#" style="text-decoration: none;">
                                <img src="~/assets/img/gallery/HelloWorld.png" alt="Hello World" style="width: 50px; height: auto;">
                                <span class="ms-2 fw-semibold text-white fs-5">Hello World IT Limited</span>
                            </a>
                            <p class="text-light my-2"><i class="fas fa-map-marker-alt me-2"></i>35/2 Shahajalal Housing, Mohammadpur, Dhaka-1207</p>
                            <p class="text-light"><i class="fas fa-envelope me-2"></i><a class="text-light" href="mailto:helloworlditacademy@gmail.com">helloworlditacademy@gmail.com</a></p>
                            <p class="text-light"><i class="fas fa-phone-alt me-2"></i>+880 1930192991 (Support)</p>
                        </div>
                        <div class="col-lg-2 mb-3">
                            <h5 class="text-light fw-bold mb-3">Community</h5>
                            <ul class="list-unstyled text-light">
                                <li><a href="#">Learners</a></li>
                                <li><a href="#">Partners</a></li>
                                <li><a href="#">Developers</a></li>
                            </ul>
                        </div>
                        <div class="col-lg-2 mb-3">
                            <h5 class="text-light fw-bold mb-3">Information</h5>
                            <ul class="list-unstyled text-light">
                                <li><a href="#">About</a></li>
                                <li><a href="#">Pricing</a></li>
                                <li><a href="#">Blog</a></li>
                            </ul>
                        </div>
                        <div class="col-lg-2 mb-3">
                            <h5 class="text-light fw-bold mb-3">More</h5>
                            <ul class="list-unstyled text-light">
                                <li><a href="#">Terms</a></li>
                                <li><a href="#">Privacy</a></li>
                                <li><a href="#">Help</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </section>

            <section class="py-2 bg-primary text-center text-white mb-0">
                <p class="mb-0">All rights reserved &copy; Hello World IT Limited, 2025 | Made with <i class="fas fa-heart text-danger"></i> by Selim Shaikh</p>
            </section>
        </footer>
        <!-- =================== FOOTER END =================== -->

    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Optional JS: pause ticker on hover -->
    <script>
        document.querySelector(".ticker-content span")?.addEventListener("mouseover", function () {
            this.style.animationPlayState = "paused";
        });
        document.querySelector(".ticker-content span")?.addEventListener("mouseout", function () {
            this.style.animationPlayState = "running";
        });
    </script>
</body>
</html>

